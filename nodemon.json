{
    "restartable": "rs",
    "ignore": [".git", "node_modules/**/node_modules"],
    "verbose": true,
    "execMap": {
        "js": "node --harmony"
    },
    "events": {
        "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": ["dist/tsPExpress.es5.js"],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js,json,ts",
    "delay": "3000"
}
